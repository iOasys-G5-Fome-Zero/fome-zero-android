<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.producer.payment.presentation.PaymentFragment">

    <View
        android:id="@+id/view_header_payment"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:background="@drawable/view_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_back_pix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:src="@drawable/arrow_back"
        android:tint="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/view_header_payment"
        app:layout_constraintStart_toStartOf="@id/view_header_payment"
        app:layout_constraintTop_toTopOf="@id/view_header_payment" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pix_key"
        android:textColor="@color/black"
        android:textSize="21sp"
        app:layout_constraintBottom_toBottomOf="@id/view_header_payment"
        app:layout_constraintStart_toEndOf="@id/btn_back_pix"
        app:layout_constraintTop_toTopOf="@id/view_header_payment" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_description_pix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:text="@string/pix_key_type"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/view_header_payment"
        app:layout_constraintTop_toBottomOf="@id/view_header_payment" />

    <RadioGroup
        android:id="@+id/radio_group_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@id/txt_description_pix"
        app:layout_constraintTop_toBottomOf="@id/txt_description_pix">

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rbtn_cpf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:buttonTint="@color/neutral_black"
            android:paddingHorizontal="16dp"
            android:text="@string/cpf"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/txt_description_pix"
            app:layout_constraintTop_toBottomOf="@id/txt_description_pix" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rbtn_cellphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/neutral_black"
            android:paddingHorizontal="16dp"
            android:text="@string/phone"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/rbtn_cpf"
            app:layout_constraintTop_toBottomOf="@id/view2" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rbtn_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/neutral_black"
            android:paddingHorizontal="16dp"
            android:text="@string/email"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/rbtn_cpf"
            app:layout_constraintTop_toBottomOf="@id/view3" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rbtn_aleatory_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/neutral_black"
            android:paddingHorizontal="16dp"
            android:text="@string/aleatory_key"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/rbtn_cpf"
            app:layout_constraintTop_toBottomOf="@id/view4" />
    </RadioGroup>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_new_pix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="@string/registre_new_pix_key"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/txt_description_pix"
        app:layout_constraintTop_toBottomOf="@id/radio_group_payment" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_txt_inform_pix"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/edit_txt_background"
        android:gravity="center_vertical"
        android:hint="@string/inform_key"
        android:inputType="textEmailAddress"
        android:paddingHorizontal="16dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/neutral_black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_new_pix" />

    <View
        android:id="@+id/view_edit_txt"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/neutral_black"
        app:layout_constraintBottom_toBottomOf="@id/edit_txt_inform_pix"
        app:layout_constraintEnd_toEndOf="@id/edit_txt_inform_pix"
        app:layout_constraintStart_toStartOf="@id/edit_txt_inform_pix" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_register_key"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/button_background"
        android:gravity="center"
        android:text="@string/registre_key"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_edit_txt" />

</androidx.constraintlayout.widget.ConstraintLayout>