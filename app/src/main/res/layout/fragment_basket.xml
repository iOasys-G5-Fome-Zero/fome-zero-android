<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".feature.producer.basket.presentation.BasketFragment">

    <View
        android:id="@+id/view_header_basket"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:background="@drawable/bg_light_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_back_my_baskets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:src="@drawable/ic_back_arrow"
        android:tint="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/view_header_basket"
        app:layout_constraintStart_toStartOf="@id/view_header_basket"
        app:layout_constraintTop_toTopOf="@id/view_header_basket" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_baskets"
        android:textColor="@color/black"
        android:textSize="21sp"
        app:layout_constraintBottom_toBottomOf="@id/view_header_basket"
        app:layout_constraintStart_toEndOf="@id/btn_back_my_baskets"
        app:layout_constraintTop_toTopOf="@id/view_header_basket" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_description_my_baskets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:text="@string/choose_basket"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:drawableTint="@color/black"
        app:layout_constraintStart_toStartOf="@id/view_header_basket"
        app:layout_constraintTop_toBottomOf="@id/view_header_basket" />

    <View
        android:id="@+id/view_small_basket"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg_green_stroke"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_description_my_baskets" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkbox1_my_baskets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:buttonTint="@color/neutral_black"
        android:padding="8dp"
        android:text="@string/small_basket"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/view_small_basket"
        app:layout_constraintTop_toTopOf="@id/view_small_basket" />

    <View
        android:id="@+id/view_medium_basket"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_green_stroke"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_small_basket" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkbox2_my_baskets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:buttonTint="@color/neutral_black"
        android:padding="8dp"
        android:text="@string/medium_basket"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/view_medium_basket"
        app:layout_constraintTop_toTopOf="@id/view_medium_basket" />

    <View
        android:id="@+id/view_big_basket"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_green_stroke"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_medium_basket" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkbox3_my_baskets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:buttonTint="@color/neutral_black"
        android:padding="8dp"
        android:text="@string/big_basket"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/view_big_basket"
        app:layout_constraintTop_toTopOf="@id/view_big_basket" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_confirm_selection"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_dark_green_small_radius"
        android:gravity="center"
        android:text="@string/confirm_selection"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_big_basket" />

</androidx.constraintlayout.widget.ConstraintLayout>