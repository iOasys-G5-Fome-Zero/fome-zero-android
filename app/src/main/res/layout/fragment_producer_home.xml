<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".feature.producer.home.presentation.ProducerHomeFragment">

    <View
        android:id="@+id/view_header_home"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:background="@drawable/view_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="48dp"
        android:text="@string/hello_user"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:drawableTint="@color/black"
        app:layout_constraintStart_toStartOf="@id/view_header_home"
        app:layout_constraintTop_toTopOf="@id/view_header_home" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_my_baskets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/my_baskets"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:drawableTint="@color/black"
        app:layout_constraintStart_toStartOf="@id/txt_name"
        app:layout_constraintTop_toBottomOf="@id/view_header_home" />

    <View
        android:id="@+id/view_baskets"
        android:layout_width="0dp"
        android:layout_height="128dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_green_stroke"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_my_baskets" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="16dp"
        android:text="@string/configure_basket_type"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/view_baskets"
        app:layout_constraintStart_toStartOf="@id/view_baskets"
        app:layout_constraintTop_toTopOf="@id/view_baskets" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_my_baskets_producer"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="54dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_background"
        android:gravity="center"
        android:text="@string/my_baskets"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/view_baskets"
        app:layout_constraintEnd_toEndOf="@id/view_baskets"
        app:layout_constraintStart_toStartOf="@id/view_baskets" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_my_finances"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/my_finances"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/view_baskets"
        app:layout_constraintTop_toBottomOf="@id/view_baskets" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_income"
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_green_button"
        android:gravity="center"
        android:text="@string/see_your_income"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_my_finances" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_pix_cadastre"
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_green_button"
        android:gravity="center"
        android:text="@string/cadastre_your_pix_key"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_income" />

</androidx.constraintlayout.widget.ConstraintLayout>