<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/producer_nav_graph"
    app:startDestination="@id/onboardingFragment">

    <fragment
        android:id="@+id/onboardingFragment"
        android:name="com.powerhungers.fomezero.OnboardingFragment"
        android:label="fragment_onboarding"
        tools:layout="@layout/fragment_onboarding" >
        <action
            android:id="@+id/navigateToHome"
            app:destination="@id/producerHomeFragment" />
    </fragment>
    <fragment
        android:id="@+id/producerHomeFragment"
        android:name="com.powerhungers.fomezero.feature.producer.presentation.ProducerHomeFragment"
        android:label="fragment_producer_home"
        tools:layout="@layout/fragment_producer_home" >
        <action
            android:id="@+id/navigate_to_basketFragment"
            app:destination="@id/basketFragment" />
        <action
            android:id="@+id/navigate_to_financesFragment"
            app:destination="@id/financesFragment" />
        <action
            android:id="@+id/navigate_to_paymentFragment"
            app:destination="@id/paymentFragment" />
        <action
            android:id="@+id/navigate_to_messagesFragment"
            app:destination="@id/messagesFragment" />
    </fragment>
    <fragment
        android:id="@+id/basketFragment"
        android:name="com.powerhungers.fomezero.feature.standbyClass.BasketFragment"
        android:label="fragment_basket"
        tools:layout="@layout/fragment_basket" />
    <fragment
        android:id="@+id/financesFragment"
        android:name="com.powerhungers.fomezero.feature.standbyClass.FinancesFragment"
        android:label="fragment_finances"
        tools:layout="@layout/fragment_finances" />
    <fragment
        android:id="@+id/paymentFragment"
        android:name="com.powerhungers.fomezero.feature.standbyClass.PaymentFragment"
        android:label="fragment_payment"
        tools:layout="@layout/fragment_payment" />
    <fragment
        android:id="@+id/messagesFragment"
        android:name="com.powerhungers.fomezero.feature.standbyClass.MessagesFragment"
        android:label="fragment_messages"
        tools:layout="@layout/fragment_messages" />
</navigation>