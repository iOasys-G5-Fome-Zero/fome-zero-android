<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/producer_nav_graph"
    app:startDestination="@id/onboardingFragment">

    <fragment
        android:id="@+id/onboardingFragment"
        android:name="com.powerhungers.fomezero.feature.onboarding.presentation.OnboardingFragment"
        android:label="fragment_onboarding"
        tools:layout="@layout/fragment_onboarding">
        <action
            android:id="@+id/navigateToHome"
            app:destination="@id/producerNavHostFragment"
            app:popUpTo="@id/onboardingFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/producerHomeFragment"
        android:name="com.powerhungers.fomezero.feature.producer.home.presentation.ProducerHomeFragment"
        android:label="fragment_producer_home"
        tools:layout="@layout/fragment_producer_home">
        <action
            android:id="@+id/navigateToBasket"
            app:destination="@id/basketFragment" />
        <action
            android:id="@+id/navigateToPayment"
            app:destination="@id/paymentFragment" />
        <action
            android:id="@+id/navigateToFinances"
            app:destination="@id/financesFragment" />
    </fragment>

    <fragment
        android:id="@+id/basketFragment"
        android:name="com.powerhungers.fomezero.feature.producer.basket.presentation.BasketFragment"
        android:label="fragment_basket"
        tools:layout="@layout/fragment_basket">
        <action
            android:id="@+id/navigateBackToProducerHome"
            app:destination="@id/producerHomeFragment" />
    </fragment>
    <fragment
        android:id="@+id/paymentFragment"
        android:name="com.powerhungers.fomezero.feature.producer.payment.presentation.PaymentFragment"
        android:label="fragment_payment"
        tools:layout="@layout/fragment_payment" />
    <fragment
        android:id="@+id/financesFragment"
        android:name="com.powerhungers.fomezero.feature.producer.finances.presentation.FinancesFragment"
        android:label="fragment_finances"
        tools:layout="@layout/fragment_finances" />
    <fragment
        android:id="@+id/producerNavHostFragment"
        android:name="com.powerhungers.fomezero.feature.producer.main.presentation.ProducerNavHostFragment"
        android:label="fragment_producer_nav_host"
        tools:layout="@layout/fragment_producer_nav_host" />

</navigation>